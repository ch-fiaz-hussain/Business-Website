@model ParaTech_Energy.Models.SolarPackageM
@{
    ViewBag.Title = "EditPackages";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="page-wrap">
    <!-- row -->
    <div class="row">

        <!-- col-left -->
        <div class="col-sm-12 col-md-12">
            <div class="panel panel-default panel-hovered panel-stacked mb30">
                <div class="panel-heading">Edit Products</div>
                <div class="panel-body">
                    @using (Html.BeginForm("EditPackages", "Package", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        <br />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <input type="hidden" value="@Model.MID" name="ID" />

                        <div class="col-md-10">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label small">Solar Packge Tile</label>
                                    <input type="text" class="form-control" value="@Model.TitleM" name="PackageTile" placeholder="PackageTile" tabindex="1">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-10">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label small">Sub Tile</label>
                                    <input type="text" class="form-control" value="@Model.SubtitleM" name="PackageSubTile" placeholder="PackageSubTile" tabindex="1">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-10">
                            <label class="control-label large"> Package Image:<small class="text-danger">size: 1280 x 350</small></label>
                            <div class="form-group">
                                <input type="file" name="File" />
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="col-md-10">
                            <div class="ui-checkbox ui-checkbox-primary">
                                <label>
                                    @Html.CheckBoxSimple("InActive", new { id = "InActive", @value = Model.InActive })
                                    <span>Active</span>
                                </label>
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="col-md-12">
                            <div class="form-group">

                                <label class="control-label small">Package Descrip</label>
                                <textarea class="form-control note" id="summernote" placeholder="Package Description" name="PackageDescrip" rows="20" style="height:200px">@Model.DescripM</textarea>

                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="clearfix">
                            <button class="btn btn-primary mr5" type="submit">Submit</button>
                            <button type="reset" class="btn btn-default">Reset</button>
                        </div>
                    }
                </div>
            </div>
        </div> <!-- #end col-left -->

    </div>
</div>
<style>
    .panel-heading i {
        color: #332d2d;
    }
</style>


<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote.min.js"></script>

<script>
    $(document).ready(function () {
        $('#summernote').summernote({
            placeholder: 'Write Here',
            tabsize: 2,
            height: 300
        });
    });

</script>

