
@{
    ViewBag.Title = "Calculator Item";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


        <div class="page-wrap">
            <!-- row -->
            <div class="row">

                <!-- col-left -->
                <div class="col-sm-12 col-md-12">
                    <div class="panel panel-default panel-hovered panel-stacked mb30">
                        <div class="panel-heading">Calculator Item</div>
                        <div class="panel-body">
                            @using (Html.BeginForm("CalculatorCreate", "Calculator", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                            {
                                <!-- form horizontal acts as a row -->
                                <!-- normal control -->
                                <div class="col-md-6">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label small">Name</label>
                                            <input type="text" class="form-control" name="Name" placeholder="Name" tabindex="1">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label small">Total Watts</label>
                                            <input type="text" class="form-control" name="TotalWatts" value="0" placeholder="Watts" tabindex="1">
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="clearfix">
                                    <button class="btn btn-primary mr5" type="submit">Submit</button>
                                    <button type="reset" class="btn btn-default">Reset</button>
                                </div>
                            }
                        </div>
                    </div>
                </div> <!-- #end col-left -->

            </div>
        </div>

