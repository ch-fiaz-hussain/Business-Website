@model ParaTech_Energy.Models.WebImage
@{
    ViewBag.Title = "EditWebImages";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<div class="page-wrap">
    <!-- row -->
    <div class="row">

        <!-- col-left -->
        <div class="col-sm-12 col-md-12">
            <div class="panel panel-default panel-hovered panel-stacked mb30">
                <div class="panel-heading">Edit Web Images</div>
                <div class="panel-body">
                    @using (Html.BeginForm("EditWebImages", "Content", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" value="@Model.ID" name="ID" />

                        <div class="col-md-10">
                            <div class="form-group">
                                <label class="control-label small">Name</label>
                                <select class="form-control" name="PageName">
                                    <option style="display:none">@Model.PageName</option>
                                    <option value="Home">Home</option>
                                    <option value="About Us">About Us</option>
                                    <option value="Solutions">Solutions</option>
                                    <option value="Products">Products</option>
                                    <option value="Blogs">Blogs</option>
                                    <option value="LatestNews">Latest News</option>
                                    <option value="Contact">Contact</option>
                                </select>
                            </div>

                        </div>

                        <div class="col-md-10">
                            @Html.LabelFor(model => model.PageLocation, htmlAttributes: new { @class = "control-label small" })
                            <div class="form-group">
                                <select class="form-control" name="PageLocation">
                                    <option style="display:none">@Model.PageLocation</option>
                                    <option value="Top">Top</option>
                                    <option value="Top Left">Top Left</option>
                                    <option value="Top Right">Top Right</option>
                                    <option value="Center">Center</option>
                                    <option value="Center Left">Center Left</option>
                                    <option value="Center Right">Center Right</option>
                                    <option value="Bottom">Bottom</option>
                                    <option value="Bottom Left">Bottom Left</option>
                                    <option value="Bottom Right">Bottom Right</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-10">
                            <label class="control-label large">Image</label>
                            <div class="form-group">
                                <input type="file" value="@Model.ImagePath" name="File" />
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="clearfix">
                            <button class="btn btn-primary mr5" type="submit">Submit</button>
                            <button type="reset" class="btn btn-default">Reset</button>
                        </div>
                    }
                </div>
            </div>
        </div> <!-- #end col-left -->

    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>