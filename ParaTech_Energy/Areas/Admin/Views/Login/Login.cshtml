@model ParaTech_Energy.Models.Login


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <!-- Icons -->
    <link rel="stylesheet" href="~/fonts/ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="~/fonts/font-awesome/css/font-awesome.min.css">

    <!-- Plugins -->
    <link rel="stylesheet" href="~/styles/plugins/waves.css">
    <link rel="stylesheet" href="~/styles/plugins/perfect-scrollbar.css">

    <!-- Css/Less Stylesheets -->
    <link rel="stylesheet" href="~/styles/bootstrap.min.css">
    <link rel="stylesheet" href="~/styles/main.min.css">
</head>
<body id="app" class="app off-canvas body-full">



    <!-- main-container -->
    <div class="main-container clearfix">

        <!-- content-here -->
        <div class="content-container" id="content">
            <div class="page page-auth">
                <div class="auth-container">

                    <div class="form-head mb20">
                        <h1 class="site-logo h2 mb5 mt5 text-center text-uppercase text-bold"><a href="index.html">Paratech Energy</a></h1>
                        <h5 class="text-normal h5 text-center">Sign In to Dashboard</h5>
                    </div>

                    <div class="form-container">
                        <form class="form-horizontal" action="@Url.Action("Login","Login")" method="post">
                            <div class="md-input-container md-float-label">
                                @*<input type="text" class="md-input">*@
                                @Html.TextBoxFor(x=>x.UserName,new {@class="md-input"})
                                <label>User Name</label>
                            </div>

                            <div class="md-input-container md-float-label">
                                @*<input type="password" class="md-input">*@
                                @Html.PasswordFor(x=>x.Password,new { @class="md-input"})
                                <label>Password</label>
                            </div>

                            <div class="clearfix">
                                <div class="ui-checkbox ui-checkbox-primary right">
                                    <label>
                                        <input type="checkbox">
                                        <span>Remember me</span>
                                    </label>
                                </div>
                            </div>
                            <div class="clearfix mb15"><a href="#" class="text-success small">Forget your password?</a></div>
                            <div class="btn-group btn-group-justified mb15">
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-success">Sign In</button>
                                </div>
                            </div>
                            <div class="clearfix text-center small">
                                <p>Don't have an account? <a href="signup.html">Create Now</a></p>
                            </div>
                        </form>
                    </div>

                </div> <!-- #end signin-container -->
            </div>



        </div>
        <!-- #end content-container -->

    </div> <!-- #end main-container -->
    <!-- Dev only -->
    <!-- Vendors -->
    <script src="scripts/vendors.js"></script>


</body>
</html>
