@model ParaTech_Energy.Models.SolarPackageD
@{
    ViewBag.Title = "EditDetaiPackages";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="page-wrap">
    <!-- row -->
    <div class="row">

        <!-- col-left -->
        <div class="col-sm-12 col-md-12">
            <div class="panel panel-default panel-hovered panel-stacked mb30">
                <div class="panel-heading">Edit Products</div>
                <div class="panel-body">
                    @using (Html.BeginForm("EditPackDetails", "Package", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        <br />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <input type="hidden" value="@Model.DID" name="ID" />
                        
                        <div class="col-md-10">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label small">Package Master Title</label>
                                    @Html.DropDownListFor(x => x.MID, (IEnumerable<SelectListItem>)ViewBag.PackageList, null, new { @class = "form-control", @required= "required" })
                                </div>
                            </div>
                        </div>
                        @*<div class="col-md-10">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label small">Package Type</label>
                                    <input type="text" class="form-control" name="PackageType" placeholder="PackageType" tabindex="1">
                                </div>
                            </div>
                        </div>*@
                        <div class="col-md-10">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label small">Detail Package Title</label>
                                    <input type="text" class="form-control" value="@Model.TitleD" name="DetailTile" placeholder="Detail Title" tabindex="1">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-10">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label small">Detail Sub Title</label>
                                    <input type="text" class="form-control" value="@Model.SubtitleD" name="DetailSubTile" placeholder="Detail Sub Title" tabindex="1">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-10">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label small">Package Price</label>
                                    <input type="text" class="form-control" value="@Model.Price" name="Price" placeholder="Price" tabindex="1">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-10">
                            <label class="control-label large"> Detail Image:<small class="text-danger">size: 400 x 300</small></label>
                            <div class="form-group">
                                <input type="file" name="File" />
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="col-md-12">
                            <div class="form-group">

                                <label class="control-label small">Package Description</label>
                                <textarea class="form-control note" id="summernote" placeholder="Package Description" name="DetailDescrip" rows="20" style="height:200px">@Model.DescripD</textarea>

                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="ui-checkbox ui-checkbox-primary">
                            <label>
                                @Html.CheckBoxSimple("ForHome", new { id = "ForHome" })
                                <span>For Home</span>
                            </label>
                        </div>
                        <div class="clearfix">
                            <button class="btn btn-primary mr5" type="submit">Submit</button>
                            <button type="reset" class="btn btn-default">Reset</button>
                        </div>
                    }
                </div>
            </div>
        </div> <!-- #end col-left -->

    </div>
</div>
<style>
    .panel-heading i {
        color: #332d2d;
    }
</style>


<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote.min.js"></script>

<script>
    $(document).ready(function () {
        $('#summernote').summernote({
            placeholder: 'Write Here',
            tabsize: 2,
            height: 300
        });
    });

</script>

