@model ParaTech_Energy.Models.ProductCategory
@{
    ViewBag.Title = "EditProductCategory";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="page-wrap">
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="panel panel-default panel-hovered panel-stacked mb30">
                <div class="panel-heading">
                    <p class="left">Edit Product Category</p>
                    <div class="clearfix"></div>
                </div>

                <div class="clearfix"></div>
                <div class="panel-body">
                    @using (Html.BeginForm("EditProductCategory", "Product", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" value="@Model.ID" name="ID" />

                        <div class="col-md-10">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label small">Category Name</label>
                                    <input type="text" class="form-control" name="CategoryName" value="@Model.CategoryName" placeholder="Title" tabindex="1">
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="col-md-10">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label small">Category ID</label>
                                    @Html.DropDownListFor(x => x.CategoryID, (IEnumerable<SelectListItem>)ViewBag.ProductList, "Select Main Category", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="col-md-10">
                            <div class="ui-checkbox ui-checkbox-primary">
                                <label>
                                    @Html.CheckBoxSimple("InActive", new { id = "InActive", @value = Model.InActive })
                                    <span>Active</span>
                                </label>
                            </div>
                        </div>

                        <div class="clearfix"></div>

                        <div class="clearfix" style="margin-left: 10px;">
                            <button class="btn btn-primary mr5" type="submit">Submit</button>
                            <button type="reset" class="btn btn-default">Reset</button>
                        </div>


                    }
                </div>
            </div>
        </div>

    </div>
</div>

