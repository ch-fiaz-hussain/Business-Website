@model ParaTech_Energy.Models.Product
@{
    ViewBag.Title = "EditProducts";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="page-wrap">
    <!-- row -->
    <div class="row">

        <!-- col-left -->
        <div class="col-sm-12 col-md-12">
            <div class="panel panel-default panel-hovered panel-stacked mb30">
                <div class="panel-heading">Edit Products</div>
                <div class="panel-body">
                    @using (Html.BeginForm("EditProducts", "Product", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        <br />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <input type="hidden" value="@Model.ID" name="ID" />

                        <div class="col-md-10">
                            <label class="control-label large">Product Image:<small class="text-danger">size: 600 x 400</small></label>
                            <div class="form-group">
                                <input type="file" value="@Model.ProductImg" name="File" />
                            </div>
                        </div>

                        <div class="clearfix"></div>

                        <div class="col-md-10">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label small">Total Watts</label>
                                    <input type="text" class="form-control" name="TotalWatts" value="@Model.TotalWatts" tabindex="1">
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="col-md-10">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label small">Product Category ID</label>
                                    @Html.DropDownListFor(x => x.ProductcatID, (IEnumerable<SelectListItem>)ViewBag.ProductList, "Select Main Category", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-10">
                            <label class="control-label large">Product File:<small style="color:forestgreen">size: 400 x 300</small></label>
                            <div class="form-group">
                                <input type="file" value="@Model.ProductFile" name="File2" />
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="col-md-10">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label small">Product Content</label>

                                    <textarea class="form-control" id="summernote" placeholder="Write Content" name="ProductContent" style="height:200px">@Model.ProdContent</textarea>


                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="clearfix">
                            <button class="btn btn-primary mr5" type="submit">Submit</button>
                            <button type="reset" class="btn btn-default">Reset</button>
                        </div>
                    }
                </div>
            </div>
        </div> <!-- #end col-left -->

    </div>
</div>
<style>

    .panel-heading i {
        color: #332d2d;
    }
</style>


<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote.min.js"></script>

<script>
    $(document).ready(function () {
        $('#summernote').summernote({
            placeholder: 'Write Here',
            tabsize: 2,
            height: 300
        });
    });

</script>

