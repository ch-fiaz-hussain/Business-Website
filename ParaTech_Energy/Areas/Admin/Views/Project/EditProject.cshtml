@model ParaTech_Energy.Models.Project
@{
    ViewBag.Title = "EditProject";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="page-wrap">
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="panel panel-default panel-hovered panel-stacked mb30">
                <div class="panel-heading">
                    <p class="left">Edit Project</p>
                    <div class="clearfix"></div>
                </div>

                <div class="clearfix"></div>
                <div class="panel-body">
                    @using (Html.BeginForm("EditProject", "Project", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        <br />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <input type="hidden" value="@Model.ID" name="ID" />

                        <div class="col-md-10">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label small">ProjectName</label>
                                    <input type="text" class="form-control" name="ProjectName" placeholder="ProjectName" value="@Model.ProjectName" tabindex="1">
                                </div>
                            </div>
                        </div>

                        <div class="col-md-10">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label small">ProjectCategory</label>
                                    <input type="text" class="form-control" name="Category" placeholder="Category" value="@Model.Category" tabindex="1">
                                </div>
                            </div>
                        </div>

                        <div class="col-md-10">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label small">Content Type</label>
                                    <select class="form-control" name="ContentType">
                                        <option style="display:none">@Model.ContentType </option>
                                        <option value="Top">Top</option>
                                        <option value="Center">Center</option>
                                        <option value="Bottom">Bottom</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-10">
                            <div class="col-md-12">
                                <div class="form-group">

                                    <label class="control-label small">Project Image Main</label>
                                    <input type="file" value="@Model.ProjectImage" name="File" />
                                </div>
                            </div>
                        </div>

                        @*<div class="col-md-10">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label large">Project Images</label>
                        <div class="form-group">
                            <input type="file" value="@Model.ProjectImages" name="multiple" multiple />
                        </div>

                    </div>
                </div>
            </div>*@

                        <div class="col-md-10">
                            <div class="col-md-12">
                                <div class="form-group">

                                    <label class="control-label small">Project Description</label>
                                    <div class="clearfix"></div>

                                    <textarea class="form-control note" id="summernote" name="ProjectDescription" rows="20" style="height:200px">@Model.ProjectDescription</textarea>
                                </div>
                            </div>
                        </div>

                        <div class="clearfix"></div>

                        <div class="clearfix" style="margin-left: 10px;">
                            <button class="btn btn-primary mr5" type="submit">Submit</button>
                            <button type="reset" class="btn btn-default">Reset</button>
                        </div>


                    }
                </div>
            </div>
        </div>

    </div>
</div>

<style>

    .panel-heading i {
        color: #332d2d;
    }
</style>


<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote.min.js"></script>

<script>
    $(document).ready(function () {
        $('#summernote').summernote({
            placeholder: 'Hello Bootstrap 4',
            tabsize: 2,
            height: 300
        });
    });
</script>



